{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "env": {
        "node": true,
        "jest": true
    },
    "rules": {
        "max-len": ["error", {
            "code": 90,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
        }],
        "no-tabs": "error",
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": "warn",
        "quotes": ["error", "single"],
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "eol-last": "error",
        "padded-blocks": "off",
        "semi": "off",
        "@typescript-eslint/semi": ["error"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }]
    }
}
