{
    "compilerOptions": {
        "baseUrl": "./",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "module": "ES6",
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "verbatimModuleSyntax": true
    }
}
